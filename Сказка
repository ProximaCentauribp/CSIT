#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    string a1, a2, a3, a4;
    cout << "Как зовут героя?" << endl;
    cin >> a1;
    cout << "Как зовут злодея?" << endl;
    cin >> a2;
    cout << "Какое оружие?" << endl;
    cin >> a3;
    cout << "Какое место действия?" << endl;
    cin >> a4; 
    cout << "Собирался как-то " << a1 << " выучить матан, но злой " << a2 << " решил помешать ему и украл его учебник Демидовича." << endl;
    cout << "Но " << a1 << " успел выучить часть предмета и смог без труда изобрести " << a3 << endl;
    cout << "Пошёл " << a1 << " в " << a4 << ", чтобы отбить свой драгоценный учебник матана у " << a2 << endl;
    cout << a1 << " нанёс удар своим " << a3 << " и победил врага." << endl;
    cout << "Этим " << a2 << " был сам " << a1 << " из будущего, который хотел чтобы матана в его жизни никогда и не было.";
    return 0;
}
