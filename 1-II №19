#include <iostream>
#include <iomanip> // импортируем манипулятор

using namespace std;

int main()
{
    double a, d, n;
    cin >> a >> d >> n;
    // используем манипулятор для форматирования
    // входного потока
    cout << fixed << setprecision(10);
    // используем формулу для суммы n-членов 
    // арифмитической прогрессии
    cout << (2 * a + d * (n - 1)) / 2 * n;
}
